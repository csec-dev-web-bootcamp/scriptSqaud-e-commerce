datasource db {
  provider  = "postgresql"
  url        = env("DATABASE_URL")
}
model Product {
  id          String  @id @default(uuid())
  name        String
  description String? @db.Text
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String
  content String? @db.Text
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  role     UserRole @default(CUSTOMER)
}

enum UserRole {
  ADMIN    @map("admin")
  CUSTOMER @map("customer")
}
